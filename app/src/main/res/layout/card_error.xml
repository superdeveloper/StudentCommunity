<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/error_cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/error_listitem_imagecontainer" />

        <TextView
            android:id="@+id/error_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="error name"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/error_listitem_subname"
            android:clickable="false" />


        <TextView
            android:id="@+id/error_listitem_subname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="erro description"
            android:paddingTop="3dp"
            android:textColor="@color/secondary_text_default_material_light"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:layout_column="1"
            android:paddingLeft="10dp"
            android:layout_alignBottom="@+id/error_listitem_imagecontainer"
            android:layout_toEndOf="@+id/error_listitem_imagecontainer" />

    </RelativeLayout>
</android.support.v7.widget.CardView>