<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
    android:id="@+id/reset_password_container">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/reset_password_existing"
        android:layout_marginLeft="5dp"
        android:hint="Current password"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/reset_password_new"
        android:layout_marginLeft="5dp"
        android:hint="New password"
        android:layout_below="@+id/reset_password_existing"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/reset_password_new_confirm"
        android:layout_marginLeft="5dp"
        android:hint="Confirm new password"
        android:layout_below="@+id/reset_password_new"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/reset_password_new_confirm"
        android:id="@+id/error_msg"
        android:textColor="@color/flat_button_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/reset_password_cancel_button"
        android:text="Cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/error_msg"
        android:layout_toStartOf="@+id/reset_password_ok_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/reset_password_ok_button"
        android:text="Ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/error_msg"/>

</RelativeLayout>